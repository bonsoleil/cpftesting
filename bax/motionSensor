<!DOCTYPE html>
<head>
<title> Motion Sensor </title>
</head>
<body>
<center>
	<h1> Movement detected: </h1>
	<span id=mov_value> none </span>
</center>
<script>
	var movSensor;
	setup();
	main();
	function main() {
		if(cpf){
			movSensor = cpf.get(“2”);
			document.getElementById("mov_value").innerHTML = movSensor; }
		setTimeout(main, 300);
	}
function setup() {
	if(cpf) {
		cpf.setPinMode(‘[“resetPin”],["setPinMode", "digital", 2, "INPUT"]’) }
}
</script>
</body>
</html>
